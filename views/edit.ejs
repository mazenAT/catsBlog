<%- include("partials/header")%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=cat.name%></div>
    <form class="ui form" action="/cats/<%=cat._id%>?_method=put" method="post">
      <div class="field">
        <label>Name</label>
        <input type="text" name="cat[name]" placeholder="name" value="<%=cat.name%>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="cat[image]" placeholder="image" value="<%=cat.image%>">
      </div>
      <div class="field">
        <label>Body</label>
        <textarea name="cat[body]" placeholder="Body goes here" required><%=cat.body%></textarea>
      </div>
      <div class="">
        <button class="ui violet basic button" type="submit" name="submit">update</button>
      </div>
    </form>
</div>

<%- include("partials/footer")%>
